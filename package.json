{
    "name": "carrentalapp",
    "version": "1.0.0",
    "description": "Car rental app",
    "main": "index.js",
    "scripts": {
        "prepare": "husky install",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --ignore-unknown --config .prettierrc --write '**/*.{js,ts,json}'",
        "test": "jest -i --verbose --coverage --collectCoverageFrom='src/**/*.ts'",
        "test:watch": "jest -i --watch",
        "build": "tsc",
        "start": "node build/app.js",
        "dev": "tsnd --rs --exit-child --watch='./src/**/*.ts' --respawn --transpile-only src/app.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jakubburzynski/carRentalApp.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jakubburzynski/carRentalApp/issues"
    },
    "homepage": "https://github.com/jakubburzynski/carRentalApp#readme",
    "dependencies": {
        "@fastify/type-provider-typebox": "^2.3.0",
        "@prisma/client": "^4.4.0",
        "@sendgrid/mail": "^7.7.0",
        "@sinclair/typebox": "^0.24.46",
        "argon2": "^0.30.1",
        "env-schema": "^5.1.0",
        "fastify": "^4.8.1",
        "fastify-plugin": "^4.3.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.6.0",
        "@types/node": "^18.8.5",
        "@types/sinon": "^10.0.13",
        "@typescript-eslint/eslint-plugin": "^5.40.0",
        "@typescript-eslint/parser": "^5.40.0",
        "eslint": "^8.25.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.1",
        "jest": "^29.2.0",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "prisma": "^4.4.0",
        "sinon": "^14.0.1",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.8.4"
    },
    "prisma": {
        "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
    },
    "lint-staged": {
        "*": [
            "npm run lint",
            "npm run format"
        ]
    }
}
